<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <unicorn>
            <configurations>
                <configuration name="Feature.Demo" description="Feature Demo" dependencies="Foundation.*" extends="Helix.Feature">
                    <predicate>
                        <include name="Layouts" database="master" path="/sitecore/layout/layouts/Feature/Demo" />
                    </predicate>
                    <rolePredicate>
                        <include domain="modules" pattern="^Feature Demo .*$" />
                    </rolePredicate>
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>